# TrackGuard AI Environment Configuration
# Copy to .env and modify as needed

# Database Configuration
DB_PASSWORD=trackguard_secure_password_change_me
DATABASE_URL=postgresql://trackguard:${DB_PASSWORD}@localhost:5432/trackguard_ai

# Redis Configuration
REDIS_PASSWORD=redis_secure_password_change_me
REDIS_URL=redis://:${REDIS_PASSWORD}@localhost:6379/0

# JWT Authentication
JWT_SECRET=your_very_secure_jwt_secret_key_at_least_32_characters_long_change_me
JWT_EXPIRATION=24h

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_DEBUG=false
API_CORS_ORIGINS=http://localhost:5173,http://localhost:3000,https://trackguard.ai

# File Upload Configuration
MAX_FILE_SIZE=500MB
UPLOAD_DIR=/app/uploads
MODELS_DIR=/app/models
OUTPUTS_DIR=/app/outputs

# AI Model Configuration
YOLO_MODEL_PATH=/app/models/yolov8m-worldv2.pt
DETECTION_CONFIDENCE=0.40
PROCESSING_BATCH_SIZE=6
FRAME_SKIP=2

# WebSocket Configuration
WS_PING_INTERVAL=30
WS_MAX_CONNECTIONS=100

# GPS Configuration
GPS_UPDATE_INTERVAL=5000
DEFAULT_ROUTE_ID=1

# Alert Configuration
ALERT_SOUND_ENABLED=true
EMAIL_ALERTS_ENABLED=false
SMS_ALERTS_ENABLED=false

# Email Configuration (if enabled)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=alerts@trackguard.ai
SMTP_PASSWORD=your_email_password
SMTP_FROM=TrackGuard AI <alerts@trackguard.ai>

# SMS Configuration (if enabled)
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+1234567890

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=/app/logs/trackguard.log
LOG_MAX_SIZE=100MB
LOG_RETENTION_DAYS=30

# Analytics Configuration
ANALYTICS_RETENTION_DAYS=90
METRICS_UPDATE_INTERVAL=60

# Security Configuration
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=3600
SESSION_TIMEOUT=1800

# Development Configuration
DEV_MODE=false
DEV_AUTO_LOGIN=false
DEV_MOCK_GPS=true
DEV_MOCK_DETECTION=true